<h1>New post</h1>
<!--Primary form builder for blog posts -->
<%= form_for :article, url: articles_path do |f| %> <!-- articles_path tells rails to point the form to the URI Pattern associated with the prefix -->

	<!-- Error Generation -->

	<% if @article.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:
			</h2>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
				<li> <%= msg %> </li>
				<% end %>
			</ul>
		</div>
	<% end %>



	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
<%= link_to 'Back', articles_path %>